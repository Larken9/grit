---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
import Footer from '../components/footer.astro';
---

<BaseLayout pageTitle="Personal Training">
  <!-- HERO SECTION -->
  <header
    class="h-screen relative bg-cover bg-center"
    style="background-image:url('/images/personaltraining-hero.webp')"
  >
    <!-- black gradient at bottom -->
    <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black"></div>
    <div class="relative h-full flex flex-col justify-center items-center text-center px-8">
      <h1 class="text-5xl md:text-6xl font-bold text-white uppercase">
        Personal Training
      </h1>
      <p class="mt-4 text-lg text-white max-w-2xl">
        Experience tailored, one-on-one coaching with our expert trainers to crush your fitness goals.
      </p>
      <!-- matched homepage button styles -->
      <a
        href="/join"
        class="mt-8 inline-block px-8 py-3 bg-white text-black uppercase font-semibold rounded-full shadow hover:opacity-90 transition"
      >
        Get Started
      </a>
    </div>
  </header>

  <!-- MAIN CONTENT -->
  <main class="bg-black text-white">
    <!-- Benefits Section -->
    <section class="container mx-auto py-16 px-8">
      <h2 class="text-3xl font-bold mb-6 uppercase">
        Why Choose Personal Training?
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="p-6 border border-gray-200 rounded-lg shadow-sm">
          <h3 class="font-semibold text-xl mb-2">Customized Workouts</h3>
          <p>Programs designed specifically for you.</p>
        </div>
        <div class="p-6 border border-gray-200 rounded-lg shadow-sm">
          <h3 class="font-semibold text-xl mb-2">Expert Guidance</h3>
          <p>Train safely with professional oversight.</p>
        </div>
        <div class="p-6 border border-gray-200 rounded-lg shadow-sm">
          <h3 class="font-semibold text-xl mb-2">Accountability</h3>
          <p>Stay motivated and track your progress weekly.</p>
        </div>
      </div>
    </section>

    <!-- MEET THE TRAINERS -->
    <section class="trainers-section py-16 bg-gray-100">
      <h2 class="trainers-title text-3xl font-bold mb-6 uppercase text-center text-black">
        Meet the Trainers
      </h2>
      <div class="trainers-wrapper relative container mx-auto px-8">
        <!-- LEFT ARROW -->
        <button
          class="carousel-button carousel-button-left absolute left-0 top-1/2 transform -translate-y-1/2 bg-white text-black p-2 rounded-full shadow-md"
          onclick="scrollTrainers(-1)"
          aria-label="Scroll left"
        >‹</button>

        <!-- SCROLLING CONTAINER -->
        <div class="trainers-container flex overflow-x-auto space-x-6 px-12" id="trainers-carousel">
          <!-- Trainer 1 -->
          <div class="trainer-card flex-shrink-0 w-64 h-80 rounded-lg shadow-md overflow-hidden relative">
            <img src="/images/PT-1.jpg" alt="Jane Doe" class="w-full h-full object-cover" />
            <div class="trainer-overlay absolute inset-0 bg-black/20"></div>
            <div class="absolute bottom-0 w-full p-4 text-center text-white bg-gradient-to-t from-black via-transparent to-transparent">
              <p class="font-semibold">Jane Doe</p>
              <p class="text-sm">Strength & Conditioning Specialist</p>
            </div>
          </div>
          <!-- Trainer 2 -->
          <div class="trainer-card flex-shrink-0 w-64 h-80 rounded-lg shadow-md overflow-hidden relative">
            <img src="/images/pt-2.jpg" alt="John Smith" class="w-full h-full object-cover" />
            <div class="trainer-overlay absolute inset-0 bg-black/20"></div>
            <div class="absolute bottom-0 w-full p-4 text-center text-white bg-gradient-to-t from-black via-transparent to-transparent">
              <p class="font-semibold">John Smith</p>
              <p class="text-sm">Functional Training Coach</p>
            </div>
          </div>
          <!-- Trainer 3 -->
          <div class="trainer-card flex-shrink-0 w-64 h-80 rounded-lg shadow-md overflow-hidden relative">
            <img src="/images/pt-3.jpg" alt="Alex Lee" class="w-full h-full object-cover" />
            <div class="trainer-overlay absolute inset-0 bg-black/20"></div>
            <div class="absolute bottom-0 w-full p-4 text-center text-white bg-gradient-to-t from-black via-transparent to-transparent">
              <p class="font-semibold">Alex Lee</p>
              <p class="text-sm">HIIT & Conditioning Expert</p>
            </div>
          </div>
          <!-- Trainer 4 -->
          <div class="trainer-card flex-shrink-0 w-64 h-80 rounded-lg shadow-md overflow-hidden relative">
            <img src="/images/pt-4.jpg" alt="Morgan Lee" class="w-full h-full object-cover" />
            <div class="trainer-overlay absolute inset-0 bg-black/20"></div>
            <div class="absolute bottom-0 w-full p-4 text-center text-white bg-gradient-to-t from-black via-transparent to-transparent">
              <p class="font-semibold">Morgan Lee</p>
              <p class="text-sm">Wellness & Mobility Coach</p>
            </div>
          </div>
        </div>

        <!-- RIGHT ARROW -->
        <button
          class="carousel-button carousel-button-right absolute right-0 top-1/2 transform -translate-y-1/2 bg-white text-black p-2 rounded-full shadow-md"
          onclick="scrollTrainers(1)"
          aria-label="Scroll right"
        >›</button>
      </div>
    </section>
  </main>
  <script>
    function scrollTrainers(direction) {
      const container = document.getElementById('trainers-carousel');
      if (!container) return;
      const scrollAmount = container.clientWidth * 0.8;
      container.scrollBy({ left: direction * scrollAmount, behavior: 'smooth' });
    }
    window.scrollTrainers = scrollTrainers;
  </script>
</BaseLayout>
